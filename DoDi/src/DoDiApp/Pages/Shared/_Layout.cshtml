<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoDiApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoDiApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" style="min-height: 100vh;">
        <nav class="bg-light border-end" style="width: 250px; flex-shrink: 0;">
            <div class="p-3">
                <h5 class="mb-3">DoDi Menu</h5>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index"><i class="fas fa-home me-2"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Terms/Index"><i class="fas fa-list me-2"></i>Terms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Privacy"><i class="fas fa-info-circle me-2"></i>About</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="flex-grow-1 d-flex flex-column">
            <main class="flex-grow-1 p-4">
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted py-3">
                <div class="container-fluid">
                    &copy; 2025 - DoDiApp - <a asp-area="" asp-page="/Privacy">About</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
