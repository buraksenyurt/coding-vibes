@model IEnumerable<Friendly.Domain.Entities.Person>

@{
    ViewData["Title"] = "Tüm Arkadaşlarım";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-users text-primary"></i> Tüm Arkadaşlarım
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Yeni Arkadaş Ekle
            </a>
            <a asp-action="Offended" class="btn btn-warning">
                <i class="fas fa-user-times"></i> Darıldıklarım
            </a>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var person in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 @(person.IsOffended ? "border-warning" : "")">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user"></i> @person.FullName
                            </h5>
                            @if (person.IsOffended)
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-heart-broken"></i> Darıldı
                                </span>
                            }
                        </div>
                        
                        @if (person.BirthDate.HasValue)
                        {
                            <p class="card-text text-muted mb-1">
                                <i class="fas fa-birthday-cake"></i> 
                                @person.BirthDate.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                            </p>
                        }
                        
                        @if (!string.IsNullOrEmpty(person.About))
                        {
                            <p class="card-text flex-grow-1">
                                <i class="fas fa-info-circle"></i> @person.About
                            </p>
                        }
                        
                        @if (person.IsOffended && !string.IsNullOrEmpty(person.OffendedReason))
                        {
                            <div class="alert alert-warning py-2 mb-2">
                                <small><strong>Darılma Nedeni:</strong> @person.OffendedReason</small>
                            </div>
                        }
                        
                        <div class="d-flex justify-content-between mt-auto">
                            <a asp-action="Details" asp-route-id="@person.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Detaylar
                            </a>
                            <a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@person.Id">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </div>
                    </div>
                    
                    <div class="card-footer text-muted">
                        <small>
                            <i class="fas fa-calendar-plus"></i> 
                            Eklenme: @person.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                </div>
            </div>
            
            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal-@person.Id" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Arkadaşı Sil</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <strong>@person.FullName</strong> adlı arkadaşını silmek istediğinden emin misin?
                            <br><small class="text-danger">Bu işlem geri alınamaz!</small>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@person.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Evet, Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-user-friends fa-5x text-muted mb-3"></i>
        <h3 class="text-muted">Henüz hiç arkadaşın yok!</h3>
        <p class="lead text-muted">İlk arkadaşını ekleyerek başla.</p>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-user-plus"></i> İlk Arkadaşını Ekle
        </a>
    </div>
}
